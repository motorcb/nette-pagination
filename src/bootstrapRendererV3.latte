{if $paginator->pageCount > 1}
    <div class="text-center">
        <ul class="pagination">

            {if $paginator->isFirst()}
                <li class="disabled"><a href="#">{$previousLabel}</a></li>
            {else}
                <li><a href="{link this, 'page' => $paginator->page - 1}" rel="prev">{$previousLabel}</a></li>
            {/if}
            {foreach $steps as $step}

                {if $step == $paginator->page}
                    <li class="disabled"><a href="#">{$step}</a></li>
                {else}
                    <li><a href="{link this, 'page' => $step}" {if $step < $paginator->page}rel="prev"
                           {else}rel="next"{/if}>{$step}</a></li>
                {/if}

                {if $iterator->nextValue > $step + 1}
                    <li class="disabled"><a href="#">â€¦</a></li>
                {/if}

            {/foreach}

            {if $paginator->isLast()}
                <li class="disabled"><a href="#">{$nextLabel}</a></li>
            {else}
                <li><a href="{link this, 'page' => $paginator->page + 1}" rel="next">{$nextLabel}</a></li>
            {/if}

        </ul>
    </div>
{/if}
